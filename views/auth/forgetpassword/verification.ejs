  <body>
      <div class="container-fluid">
          <div class="row">
              <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 pt-2 pb-2">
                <a href="/">
                    <img src="../public/assets/img/logo.png" alt="Responsive image" height="40px">
                </a>
                <p class="float-right">
                    <a class="float-right" href="/"  style="color: #7B96D4;">
                    <i class="fa fa-home" style="font-size: 25px;" aria-hidden="true"></i></a>
                </p>
              </div>
              <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6 sidepic" style="background-color: #7B96D4;">
              </div>
          </div>
          <div class="row">
              <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6 sidepic">
                <div class="d-flex justify-content-center border border-light p-5 ">
                    <img src="../public/assets/signin/4.png" class="img-fluid" alt="">
                  </div>
              </div>
              <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 signinpage3 ">
                    <div class="login-form">
                    <div class="main-div2">
                        <div class="panel2"> 
                       <p><a href="" style="float: right; text-decoration: none; font-weight: bold; font-size: 16px;"><i class="fa fa-arrow-circle-o-left fa-lg" aria-hidden="true"></i></a></p>
                       <h4 class="pt-5">Email Verification</h4>
                       </div>
                       <form id="newpsd">
                           <label>Enter Code</label>
                           <div class="form-group input-group">
                            <input id="otp1" type="text" class="form-control resetcode" maxlength="1" size="1" min="0" max="9" pattern="[0-9]{1}" required>
                            <input id="otp2" type="text" class="form-control resetcode" maxlength="1" size="1" min="0" max="9" pattern="[0-9]{1}" required>
                            <input id="otp3" type="text" class="form-control resetcode" maxlength="1" size="1" min="0" max="9" pattern="[0-9]{1}" required>
                            <input id="otp4" type="text" class="form-control resetcode" maxlength="1" size="1" min="0" max="9" pattern="[0-9]{1}" required>
                            <input id="otp5" type="text" class="form-control resetcode" maxlength="1" size="1" min="0" max="9" pattern="[0-9]{1}" required>
                               <input id="email" type="hidden" value="<%= token%>">
                        </div>
                           <small id="error" class="text-danger"></small>
                        <input type="submit" id="submitBtn" value="Next" class="mb-4">
                        <label>If you didn't receive conformation code!</label>
                        <input type="submit" id="resendBtn" value="Resend">
                    </form>
                </div>
                </div>
            </div>
        </div>
    </div>
    <!--Form End-->
