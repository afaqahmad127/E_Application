      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<!--    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="../public/assets/myscripts.js"></script>
  </body>
  <script>
      function showError() {
          Swal.fire({
              text: "Sorry, looks like there are some errors detected, please try again.",
              icon: "error",
              buttonsStyling: !1,
              confirmButtonText: "Ok, got it!",
              customClass: {confirmButton: "btn btn-primary"},
          });
      }
      $(document).ready(function () {
          $("#submitBtn").click(function (n) {
              document.getElementById('error').innerHTML = "";
              n.preventDefault();
              let otp ="";
              let otp1 = $("#otp1").val();
              let otp2 = $("#otp2").val();
              let otp3 = $("#otp3").val();
              let otp4 = $("#otp4").val();
              let otp5 = $("#otp5").val();
              otp += otp1 + otp2 + otp3 + otp4 + otp5;
              let email = $("#email").val();
                  let jsonData = JSON.parse(JSON.stringify({
                      'email': email,
                      'otp': otp,
                  }));
                  $.ajax({
                      type: "POST",
                      contentType: "application/x-www-form-urlencoded",
                      url: "/signup/verifyaccount",
                      data: jsonData,
                      success: function (data, textStatus, jqXHR) {
                          console.log(data);
                          Swal.fire({
                              text: "Congratulations! Email verification completed.",
                              icon: "success",
                              buttonsStyling: !1,
                              confirmButtonText: "Ok, got it!",
                              customClass: {confirmButton: "btn btn-primary"},
                          }).then((_)=>{
                              window.location =  `/forgetpassword/resetpassword?token=${data}`;
                          });
                      },
                      error: function (data, jqXHR, textStatus, errorThrown) {
                          let error = data.responseJSON.message
                          if(error === "otp wrong"){
                              document.getElementById('error').innerHTML = "Wrong OTP!";
                          }
                          }
                  });
          });
          $("#resendBtn").click(function (n) {
              document.getElementById('error').innerHTML = "";
              n.preventDefault();
              let email = $("#email").val();
              let jsonData = JSON.parse(JSON.stringify({
                  'email': email,
              }));
              $.ajax({
                  type: "PUT",
                  contentType: "application/x-www-form-urlencoded",
                  url: "/signup/resendemail",
                  data: jsonData,
                  success: function (data, textStatus, jqXHR) {
                      console.log(data);
                      Swal.fire({
                          text: "OTP sent successfully again!",
                          icon: "success",
                          buttonsStyling: !1,
                          confirmButtonText: "Ok, got it!",
                          customClass: {confirmButton: "btn btn-primary"},
                      })
                  },
                  error: function (data, jqXHR, textStatus, errorThrown) {
                      if(data.status === 500){
                          Swal.fire({
                              text: "Sorry, There are some errors detected in Server, please try again.",
                              icon: "error",
                              buttonsStyling: !1,
                              confirmButtonText: "Ok, got it!",
                              customClass: {confirmButton: "btn btn-primary"},
                          });
                      }else {
                          let error = data.responseJSON.message
                          if (error === "otp wrong") {
                              document.getElementById('error').innerHTML = "Wrong OTP!";
                          }
                          showError();
                      }
                  }
              });
          });
      });
  </script>
</html>